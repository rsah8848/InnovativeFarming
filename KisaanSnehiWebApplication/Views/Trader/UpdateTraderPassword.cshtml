@model KisaanSnehiWebApplication.Models.RegistrationModel

@{
    ViewData["Title"] = "UpdateTraderPassword";
    Layout = "~/Views/Shared/_TraderLayout.cshtml";
}

<section id="Edit" class="d-flex flex-column justify-content-center align-items-center">


    <div>
        <a asp-action="TraderProfile">Back</a>
    </div>
    <h1>Change Password</h1>

    <hr />
    <div class="row">
        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form asp-action="UpdateTraderPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailId" class="control-label">@ViewData["email"]</label>

                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecurityQue" class="control-label"></label>
                    <input asp-for="SecurityQue" class="form-control" />
                    <span asp-validation-for="SecurityQue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Answer" class="control-label"></label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

</section>

@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.ErrorMessage");
                window.location.href = "TraderProfile";
            };
    </script>

}