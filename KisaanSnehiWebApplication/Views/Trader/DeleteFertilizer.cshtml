@model KisaanSnehiWebApplication.Models.FertilizerModel

@{
    ViewData["Title"] = "Delete Fertilizer";
    Layout = "~/Views/Shared/_TraderLayout.cshtml";
}

<div class="modal fade" id="DeleteFertilizer">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="DeleteFertilizer" style="padding-left:180px; color:forestgreen">Delete</h4>
                <button type="button" class="btn btn-close" data-dismiss="modal" style="background-color:forestgreen; color:white;">
                </button>
            </div>

            <div class="modal-body">
                <h3>Are you sure you want to delete this?</h3><br />

                <div>

                    <img src="@("~/FertilizerImages/" + Model.Image)" asp-append-version="true" alt="" class="img-fluid"
                         style="width:200px; height:170px;"> <br />
                    @Html.DisplayNameFor(model => model.FertilizerName) : @Html.DisplayFor(modelItem => modelItem.FertilizerName) <br />
                    @Html.DisplayNameFor(model => model.FertilizerPrice) : @Html.DisplayFor(modelItem => modelItem.FertilizerPrice) <br />
                    @Html.DisplayNameFor(model => model.FertilizerDesc) : @Html.DisplayFor(modelItem => modelItem.FertilizerDesc) <br />
                    @Html.DisplayNameFor(model => model.FertilizerQuantity) : @Html.DisplayFor(modelItem => modelItem.FertilizerQuantity) <br />
                    @Html.DisplayNameFor(model => model.FertilizerQuantityInStock) : @Html.DisplayFor(modelItem => modelItem.FertilizerQuantityInStock) <br />
                </div>

                <br />

                <form asp-action="DeleteFertilizer">
                    <input type="submit" value="Delete" class="btn btn-primary" style="background-color:forestgreen; color:white;" />
                    <button type="button" class="btn btn-secondary close" data-dismiss="modal" style="background-color:forestgreen; color:white;">
                        <span>Close</span>
                    </button>
                </form>



            </div>


        </div>


    </div>



</div>
