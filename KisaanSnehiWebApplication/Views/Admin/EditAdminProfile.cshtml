@model KisaanSnehiWebApplication.Models.RegistrationModel

@{
    ViewData["Title"] = "EditAdminProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.ErrorMessage");
                window.location.href = "AdminProfilePage";
            };
    </script>

}
<section id="Edit" class="d-flex flex-column justify-content-center align-items-center">


     
    <h1>Edit Profile</h1>
    @ViewBag.ErrorMessage
    <hr />
    <div class="row">
        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form asp-action="EditAdminProfile">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailId" class="control-label">@ViewData["email"]</label>

                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <br /><br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNo" class="control-label"></label>
                    <input asp-for="PhoneNo" class="form-control" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label">choose city</label>
                    <select asp-for="LocationId" class="form-control"
                            asp-items="@(new SelectList(@ViewBag.locations,"LocationId","City"))">
                        <option value="none" selected disabled hidden>
                            select one option
                        </option>
                    </select>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button asp-action="AdminProfilePage" class="btn btn-danger">Cancel</button>

                </div>

            </form>
        </div>
    </div>

</section>

