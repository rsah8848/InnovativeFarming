@model KisaanSnehiWebApplication.Models.RegistrationModel

@{
    ViewData["Title"] = "ChangeAdminPassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="Edit" class="d-flex flex-column justify-content-center align-items-center">


    
    <h1>Change Password</h1>

    <hr />
    <div class="row">
        <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form asp-action="ChangeAdminPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailId" class="control-label">@ViewData["email"]</label>

                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecurityQue" class="control-label"></label>
                    <select asp-for="SecurityQue" class="form-control">
                        <option value="none" selected disabled hidden>
                            select one option
                        </option>
                        <option value="My pet's Name">My pet's Name</option>
                        <option value="My mother's Name">My mother's Name</option>
                        <option value="My Birth place">My Birth place</option>
                    </select>
                    <span asp-validation-for="SecurityQue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Answer" class="control-label"></label>
                    <input asp-for="Answer" class="form-control" />
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button asp-action="AdminProfilePage" class="btn btn-danger">Cancel</button>
                </div>

            </form>
           
        </div>
    </div>

</section>
@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.ErrorMessage");
                window.location.href = "AdminProfilePage";
            };
    </script>

}





















