@model KisaanSnehiWebApplication.Models.RegistrationModel

@{
    ViewData["Title"] = "RemoveProfilePicture";
    Layout = "~/Views/Shared/_FarmerLayout.cshtml";
}

@*<h1>RemoveProfilePicture</h1>*@

<section class="d-flex flex-column justify-content-center align-items-center">
    
    <div>
        <h3>Are you sure you want to delete your Profile Picture?</h3>
        <hr />
        <dl class="row">

            <dt class="col"style="align-content:center">
                @Html.DisplayFor(model => model.Name)
            </dt>
            <p>        </p>
            <dd class="col-sm-10">
                <img src="@("~/ImagesDB/"+Model.Image)" asp-append-version="true" alt="" class="img-fluid rounded-circle" width="200" height="200">
            </dd>

        </dl>

        <form asp-action="RemoveProfilePicture">
            <input type="submit" value="Delete" class="btn btn-primary" style="background-color:#f44336; color:white;" />

            <button formaction="@Url.Action("FarmerProfilePage", "FarmerProfile")#Profile" class="btn btn-outline-secondary" >Cancel</button>

        </form>
    </div>
</section>
